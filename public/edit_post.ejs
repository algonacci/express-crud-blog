<!DOCTYPE html>
<html lang="en">
  <%- include ("includes/header") %>
  <body>
    <%- include ("includes/navbar") %>
    <div class="container mt-2">
      <h1>Add Posts</h1>
      <form action="/update_post/<%= post.id %>" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            value="<%= post.title %>"
          />
        </div>
        <div class="form-group">
          <label>Author</label>
          <input
            type="text"
            name="author"
            class="form-control"
            value="<%= post.author %>"
          />
        </div>
        <div class="form-group">
          <label>Body</label>
          <input
            type="text"
            name="body"
            class="form-control"
            value="<%= post.body %>"
          />
        </div>
        <input
          type="submit"
          name="submit"
          value="Submit"
          class="btn btn-primary mt-3"
        />
      </form>
    </div>
  </body>
</html>
